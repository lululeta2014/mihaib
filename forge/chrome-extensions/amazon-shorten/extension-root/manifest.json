{
    "manifest_version": 2,

    "name": "Amazon Shorten",
    "version": "1",

    "description": "Shorten Amazon product URLs.",
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "16": "icons/16.png",
        "32": "icons/32.png"
    },

    "page_action": {
        "default_icon": {
            "19": "icons/19.png",
            "38": "icons/38.png"
        },
        "default_title": "Shorten Amazon URL"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "declarativeContent",
        "activeTab"
    ]
}
