# Hidden Options http://docs.xfce.org/apps/terminal/advanced
# In XFCE, vertically maximizing then opening a second tab resizes the window
# and you can't unmaximize back. Gnome3 handles this fine.
# Workaround: always show tabs, so no resizing occurs.
MiscAlwaysShowTabs=TRUE
MiscCursorBlinks=TRUE
MiscMouseAutohide=TRUE

# http://docs.xfce.org/apps/terminal/dropdown
# Always show tabs, so we get the bottom-right button to keep the window open
# when it loses focus. That button applies just to the current window and is
# different from the checkbox in the ‘preferences’ dialog for each new window.
#DropdownAlwaysShowTabs=FALSE

# Don't keep it on top – this only makes a difference when we choose to ‘keep
# window open when it loses focus’ from the bottom-right button.
DropdownKeepAbove=FALSE
